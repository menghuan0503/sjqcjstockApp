<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"/>

    <RadioGroup
        android:id="@+id/main_tabBar"
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tab_txt_sel"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/main_forum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_forum"
            android:gravity="center"
            android:text="股吧"
            android:textColor="@drawable/tab_txt_sel"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/main_match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_message"
            android:gravity="center"
            android:text="模拟炒股"
            android:textColor="@drawable/tab_txt_sel"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/main_inform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_inform"
            android:gravity="center"
            android:text="资讯"
            android:textColor="@drawable/tab_txt_sel"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/main_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_my"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/tab_txt_sel"
            android:textSize="10sp" />

    </RadioGroup>

</LinearLayout>
